<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HealthOptimizer.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1120" d:DesignHeight="900"
             x:Class="HealthOptimizer.Views.DailyLogView"
             x:DataType="vm:DailyLogViewModel"
             Background="#F5F7FA">

	<ScrollViewer>
		<StackPanel Margin="40" Spacing="32" MaxWidth="900">

			<!-- Page Header -->
			<StackPanel Spacing="8">
				<TextBlock Text="Daily Log"
						   FontSize="36"
						   FontWeight="Bold"
						   Foreground="#1E293B"/>
				<TextBlock Text="Track your nutrition and daily metrics"
						   FontSize="16"
						   Foreground="#64748B"/>
			</StackPanel>

			<!-- Main Card -->
			<Border Background="White"
					Padding="40"
					CornerRadius="16"
					BoxShadow="0 1 3 0 #15000000">

				<StackPanel Spacing="28">

					<!-- Date Selection -->
					<StackPanel Spacing="12">
						<TextBlock Text="Date"
								   FontSize="14"
								   FontWeight="SemiBold"
								   Foreground="#475569"/>
						<DatePicker SelectedDate="{Binding SelectedDate}"
									HorizontalAlignment="Left"
									MinWidth="200"/>
					</StackPanel>

					<!-- Weight -->
					<StackPanel Spacing="12">
						<TextBlock Text="Weight (lbs)"
								   FontSize="14"
								   FontWeight="SemiBold"
								   Foreground="#475569"/>
						<TextBox Text="{Binding Weight}"
								 Watermark="Enter weight"
								 Width="300"
								 HorizontalAlignment="Left"
								 Height="44"
								 FontSize="15"
								 Padding="12"/>
					</StackPanel>

					<!-- Calories -->
					<StackPanel Spacing="12">
						<TextBlock Text="Calories"
								   FontSize="14"
								   FontWeight="SemiBold"
								   Foreground="#475569"/>
						<TextBox Text="{Binding Calories}"
								 Watermark="Total calories"
								 Width="300"
								 HorizontalAlignment="Left"
								 Height="44"
								 FontSize="15"
								 Padding="12"/>
					</StackPanel>

					<!-- Macros Section -->
					<StackPanel Spacing="20">
						<TextBlock Text="Macros"
								   FontSize="18"
								   FontWeight="Bold"
								   Foreground="#1E293B"/>

						<Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto">

							<StackPanel Grid.Column="0" Spacing="12" Margin="0,0,16,0">
								<TextBlock Text="Protein (g)"
										   FontSize="14"
										   FontWeight="SemiBold"
										   Foreground="#475569"/>
								<TextBox Text="{Binding ProteinGrams}"
										 Watermark="Grams"
										 Height="44"
										 FontSize="15"
										 Padding="12"/>
							</StackPanel>

							<StackPanel Grid.Column="1" Spacing="12" Margin="8,0,8,0">
								<TextBlock Text="Carbs (g)"
										   FontSize="14"
										   FontWeight="SemiBold"
										   Foreground="#475569"/>
								<TextBox Text="{Binding CarbsGrams}"
										 Watermark="Grams"
										 Height="44"
										 FontSize="15"
										 Padding="12"/>
							</StackPanel>

							<StackPanel Grid.Column="2" Spacing="12" Margin="16,0,0,0">
								<TextBlock Text="Fats (g)"
										   FontSize="14"
										   FontWeight="SemiBold"
										   Foreground="#475569"/>
								<TextBox Text="{Binding FatsGrams}"
										 Watermark="Grams"
										 Height="44"
										 FontSize="15"
										 Padding="12"/>
							</StackPanel>

						</Grid>
					</StackPanel>

					<!-- Steps -->
					<StackPanel Spacing="12">
						<TextBlock Text="Steps"
								   FontSize="14"
								   FontWeight="SemiBold"
								   Foreground="#475569"/>
						<TextBox Text="{Binding Steps}"
								 Watermark="Daily steps"
								 Width="300"
								 HorizontalAlignment="Left"
								 Height="44"
								 FontSize="15"
								 Padding="12"/>
					</StackPanel>

					<!-- Save Button -->
					<Button Content="Save Daily Log"
							Command="{Binding SaveCommand}"
							HorizontalAlignment="Left"
							MinWidth="200"
							Height="48"
							FontSize="16"
							FontWeight="SemiBold"
							Background="#3B82F6"
							Foreground="White"
							CornerRadius="8"
							Margin="0,12,0,0"
							Cursor="Hand"/>

					<!-- Status Message -->
					<TextBlock Text="{Binding StatusMessage}"
							   Foreground="#10B981"
							   FontWeight="SemiBold"
							   FontSize="14"
							   Margin="0,8,0,0"/>

				</StackPanel>

			</Border>

		</StackPanel>
	</ScrollViewer>

</UserControl>