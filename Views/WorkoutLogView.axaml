<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HealthOptimizer.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:converters="using:HealthOptimizer.Converters"
             mc:Ignorable="d" d:DesignWidth="1120" d:DesignHeight="900"
             x:Class="HealthOptimizer.Views.WorkoutLogView"
             x:DataType="vm:WorkoutLogViewModel"
             Background="#F5F7FA">

	<UserControl.Resources>
		<converters:StringToDoubleConverter x:Key="StringToDoubleConverter"/>
		<converters:StringToIntConverter x:Key="StringToIntConverter"/>
	</UserControl.Resources>

	<ScrollViewer>
		<StackPanel Margin="40" Spacing="32" MaxWidth="1000">

			<!-- Page Header -->
			<StackPanel Spacing="8">
				<TextBlock Text="Workout Logger"
						   FontSize="36"
						   FontWeight="Bold"
						   Foreground="#1E293B"/>
				<TextBlock Text="Log your lifting sessions"
						   FontSize="16"
						   Foreground="#64748B"/>
			</StackPanel>

			<!-- Session Info Card -->
			<Border Background="White"
					Padding="40"
					CornerRadius="16"
					BoxShadow="0 1 3 0 #15000000">

				<StackPanel Spacing="24">

					<TextBlock Text="Session Info"
							   FontSize="20"
							   FontWeight="Bold"
							   Foreground="#1E293B"/>

					<Grid ColumnDefinitions="*,*" RowDefinitions="Auto">

						<StackPanel Grid.Column="0" Spacing="12" Margin="0,0,16,0">
							<TextBlock Text="Workout Date"
									   FontSize="14"
									   FontWeight="SemiBold"
									   Foreground="#475569"/>
							<DatePicker SelectedDate="{Binding WorkoutDate}"
										HorizontalAlignment="Stretch"/>
						</StackPanel>

						<StackPanel Grid.Column="1" Spacing="12" Margin="16,0,0,0">
							<TextBlock Text="Workout Type"
									   FontSize="14"
									   FontWeight="SemiBold"
									   Foreground="#475569"/>
							<ComboBox ItemsSource="{Binding WorkoutTypes}"
									  SelectedItem="{Binding WorkoutType}"
									  HorizontalAlignment="Stretch"
									  Height="44"/>
						</StackPanel>

					</Grid>

					<Border Background="#EFF6FF"
							Padding="16"
							CornerRadius="8">
						<TextBlock Text="{Binding StatusMessage}"
								   FontWeight="SemiBold"
								   FontSize="14"
								   Foreground="#1E40AF"
								   TextWrapping="Wrap"/>
					</Border>

				</StackPanel>

			</Border>

			<!-- Log Exercise Card -->
			<Border Background="White"
					Padding="40"
					CornerRadius="16"
					BoxShadow="0 1 3 0 #15000000">

				<StackPanel Spacing="24">

					<TextBlock Text="Log Exercise"
							   FontSize="20"
							   FontWeight="Bold"
							   Foreground="#1E293B"/>

					<!-- Exercise Selection -->
					<StackPanel Spacing="12">
						<TextBlock Text="Exercise"
								   FontSize="14"
								   FontWeight="SemiBold"
								   Foreground="#475569"/>
						<ComboBox ItemsSource="{Binding CommonExercises}"
								  SelectedItem="{Binding SelectedExerciseName}"
								  HorizontalAlignment="Stretch"
								  IsEditable="True"
								  Height="44"/>

						<!-- Bodyweight Exercise Indicator -->
						<Border Background="#DBEAFE"
								Padding="12,8"
								CornerRadius="6"
								IsVisible="{Binding IsBodyweightExercise}">
							<TextBlock Text="ðŸ’ª Bodyweight Exercise - Weight set to 0"
									   FontSize="13"
									   FontWeight="SemiBold"
									   Foreground="#1E40AF"/>
						</Border>
					</StackPanel>

					<!-- Sets, Reps, Weight -->
					<Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto">

						<StackPanel Grid.Column="0" Spacing="12" Margin="0,0,12,0">
							<TextBlock Text="Sets"
									   FontSize="14"
									   FontWeight="SemiBold"
									   Foreground="#475569"/>
							<TextBox Text="{Binding Sets, Converter={StaticResource StringToIntConverter}}"
         Watermark="3"
         Height="44"
         FontSize="15"
         Padding="12"/>
						</StackPanel>

						<StackPanel Grid.Column="1" Spacing="12" Margin="6,0,6,0">
							<TextBlock Text="Reps"
									   FontSize="14"
									   FontWeight="SemiBold"
									   Foreground="#475569"/>
							<TextBox Text="{Binding Reps, Converter={StaticResource StringToIntConverter}}"
         Watermark="8"
         Height="44"
         FontSize="15"
         Padding="12"/>
						</StackPanel>

						<StackPanel Grid.Column="2" Spacing="12" Margin="12,0,0,0">
							<TextBlock Text="Weight (lbs - 0 for bodyweight)"
									   FontSize="14"
									   FontWeight="SemiBold"
									   Foreground="#475569"/>
							<TextBox Text="{Binding Weight, Converter={StaticResource StringToDoubleConverter}}"
         Watermark="135 (or 0)"
         Height="44"
         FontSize="15"
         Padding="12"/>
						</StackPanel>

					</Grid>

					<!-- RPE -->
					<StackPanel Spacing="12">
						<TextBlock Text="RPE (1-10)"
								   FontSize="14"
								   FontWeight="SemiBold"
								   Foreground="#475569"/>
						<TextBox Text="{Binding RPE, Converter={StaticResource StringToIntConverter}}"
         Watermark="7"
         Width="300"
         HorizontalAlignment="Left"
         Height="44"
         FontSize="15"
         Padding="12"/>
						<TextBlock Text="Rate of Perceived Exertion: 1=very easy, 10=maximum effort"
								   FontSize="12"
								   Foreground="#94A3B8"/>
					</StackPanel>

					<!-- Log Button -->
					<Button Content="Log Exercise"
							Command="{Binding LogExerciseCommand}"
							HorizontalAlignment="Left"
							MinWidth="200"
							Height="48"
							FontSize="16"
							FontWeight="SemiBold"
							Background="#10B981"
							Foreground="White"
							CornerRadius="8"
							Margin="0,8,0,0"
							Cursor="Hand"/>

				</StackPanel>

			</Border>

			<!-- Workout Summary Card -->
			<Border Background="White"
					Padding="32"
					CornerRadius="16"
					BoxShadow="0 1 3 0 #15000000">

				<StackPanel Spacing="20">

					<TextBlock Text="Workout Summary"
							   FontSize="20"
							   FontWeight="Bold"
							   Foreground="#1E293B"/>

					<ItemsControl ItemsSource="{Binding WorkoutSets}">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<Border Background="#F8FAFC"
										Padding="20"
										Margin="0,0,0,12"
										CornerRadius="10">
									<Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
										<TextBlock Grid.Column="0"
												   Text="{Binding ExerciseName}"
												   FontWeight="SemiBold"
												   FontSize="15"
												   VerticalAlignment="Center"
												   Foreground="#1E293B"/>
										<TextBlock Grid.Column="1"
												   Text="{Binding SetNumber, StringFormat='Set {0}'}"
												   VerticalAlignment="Center"
												   Margin="20,0,0,0"
												   FontSize="13"
												   Foreground="#64748B"/>
										<TextBlock Grid.Column="2"
												   Text="{Binding Reps, StringFormat='{}{0} reps'}"
												   VerticalAlignment="Center"
												   Margin="20,0,0,0"
												   FontSize="14"
												   Foreground="#475569"/>
										<TextBlock Grid.Column="3"
												   Text="{Binding Weight, StringFormat='@ {0} lbs'}"
												   VerticalAlignment="Center"
												   Margin="16,0,0,0"
												   FontWeight="SemiBold"
												   FontSize="15"
												   Foreground="#1E293B"/>
										<Border Grid.Column="4"
												Background="#DBEAFE"
												Padding="8,4"
												CornerRadius="6"
												Margin="20,0,0,0">
											<TextBlock Text="{Binding EstimatedOneRM, StringFormat='e1RM: {0}'}"
													   VerticalAlignment="Center"
													   FontSize="12"
													   FontWeight="SemiBold"
													   Foreground="#1E40AF"/>
										</Border>
									</Grid>
								</Border>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>

					<!-- Session Notes -->
					<StackPanel Spacing="12" Margin="0,20,0,0">
						<TextBlock Text="Session Notes"
								   FontSize="14"
								   FontWeight="SemiBold"
								   Foreground="#475569"/>
						<TextBox Text="{Binding Notes}"
								 Watermark="How did the workout feel? Any PRs?"
								 Height="100"
								 AcceptsReturn="True"
								 TextWrapping="Wrap"
								 FontSize="15"
								 Padding="12"/>
					</StackPanel>

				</StackPanel>

			</Border>

		</StackPanel>
	</ScrollViewer>

</UserControl>